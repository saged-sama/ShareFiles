apiVersion: core.choreo.dev/v1beta1
kind: ComponentConfig  # Use "Function" for a FastAPI application
metadata:
  name: your-component-name  # Replace with your desired component name
  version: 1.0.0             # Specify the version of your component
spec:
  runtime: python             # Specify the runtime
  entryPoint: main:app        # Update this to match your FastAPI app instance
  requirements:
    - ./requirements.txt      # Path to your requirements file
